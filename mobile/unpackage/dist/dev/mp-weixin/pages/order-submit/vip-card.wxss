.main-card,
.child-card {
  padding: 56rpx;
  border-radius: 16rpx;
  margin: 24rpx;
}
.main-card {
  background: #d6aa84;
  color: #342e25;
  background-size: 100% 100%;
  height: 361rpx;
  font-size: 24rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 0 24rpx rgba(0, 0, 0, 0.15);
}
.main-card .name {
  font-size: 40rpx;
  margin-bottom: 32rpx;
}
.child-card {
  background: #fff;
  position: relative;
  overflow: hidden;
  z-index: 1;
  border: 1rpx solid #e5e5e5;
}
.child-card .price {
  font-size: 40rpx;
  font-weight: bold;
}
.submit-bar {
  position: fixed;
  z-index: 100;
  left: 0;
  bottom: 0;
  width: 100%;
  background: #fff;
  height: 100rpx;
  border-top: 1rpx solid rgba(0, 0, 0, 0.1);
}
.submit-bar .price {
  padding: 0 24rpx;
}
.submit-bar .submit-btn {
  padding: 0 48rpx;
  color: #fff;
}
.checkbox {
  width: 46rpx;
  height: 46rpx;
  border-radius: 1000rpx;
  border-width: 2rpx;
  border-style: solid;
}
.checkbox.border-gray {
  border-color: #ccc;
}

